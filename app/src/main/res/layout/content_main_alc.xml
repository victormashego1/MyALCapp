<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainALC"
    tools:showIn="@layout/activity_main_alc">

    <Button
        android:id="@+id/btnAboutAlc"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="175dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/amarante"
        android:includeFontPadding="true"
        android:lineSpacingExtra="24sp"
        android:text="ABOUT ALC"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnMyProfile"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="175dp"
        android:layout_height="57dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/amarante"
        android:includeFontPadding="true"
        android:lineSpacingExtra="24sp"
        android:text="MY PROFILE"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnAboutAlc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnAboutAlc"
        app:layout_constraintTop_toBottomOf="@+id/btnAboutAlc"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="serif"
        android:text="Welcome to ALC 4.0"
        android:textAlignment="center"
        android:textColor="#FA0C0101"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>